{
  "name": "thierry-trigger",
  "description": "Example trigger for Corticon",
  "event": {
    "data-event": {
      "collection-scope": {
        "uri": "thierry"
      },
      "document-content": {
        "update-kind": "modify"
      },
      "when": "pre-commit"
    }
  },
  "module": "/thierry/trigger.sjs",
  "module-db": "%%MODULES_DATABASE%%",
  "module-root": "/",
  "enabled": true,
  "recursive": true,
  "task-priority": "normal"
}
